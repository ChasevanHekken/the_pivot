


<h3>Registration</h3>



<div class="row">
  <div class="large-12 columns">
    <% if current_user %>
      <div class="small-7 columns">
        <h4 id="notice"><%= notice %></h4>
      </div>
      <div class="small-3 columns">
        <%= link_to "Sign Out", logout_path, method: :delete %>
      </div>


    <%else%>



      <form data-abide>
    <%= form_for User.new do |f| %>
        <div class="name-field">
          <label>First Name <small>(required)</small>
            <input type="text" name="first_name" required pattern="[a-zA-Z]+">
          </label>
          <small class="error">Please provide a first name.</small>
        </div>

        <div class="name-field">
          <label>Last Name <small>(required)</small>
            <input type="text" name="last_name" required pattern="[a-zA-Z]+">
          </label>
          <small class="error">Please provide a last name.</small>
        </div>

        <div class="username">
          <label>Username
            <input type="text" name="username" required pattern="[a-zA-Z]+">
          </label>
        </div>

        <div class="email-field">
          <label>Email <small>(required)</small>
            <input type="email" name="email" required>
          </label>
          <small class="error">An email address is required.</small>
        </div>

        <div class="password-field">
          <label>Password <small>(required)</small>
            <input type="text" name="password" required>
          </label>
          <small class="error">Please provide a password.</small>
        </div>

        <div class="password-confirmation-field">
          <label>Confirm Password <small>(required)</small>
            <input type="text" name="password_confirmation" data-equalto="password" required>
          </label>
          <small class="error">The passwords do not match.</small>
        </div>

        <button type="submit">Submit</button>
      </form><%end%>
    <%end%>
  </div>
</div>