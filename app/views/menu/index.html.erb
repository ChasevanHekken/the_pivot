<h2>Which will you choose?</h2><br/>

<div class="button-bar">
      <% @items.each do |i| %>
  <ul class="button-group">
      <li><button data-dropdown="drop2" aria-controls="drop2" aria-expanded="false" class="small round button dropdown"><%= i.name %></a></li>
      <div id="drop2" data-dropdown-content class="f-dropdown content" aria-hidden="true" tabindex="-1"><p>  THIS IS where a cool picture and descritopn should go</p></div>
      <%end%>
  </ul>
</div>


<h2>Fillings</h2><br/>

<h3 data-magellan-destination="meats">Meats</h3>
<a name="meats"></a>

  <div class="row">
    <div class="large-5 columns">
      <% @meats.each_with_index do |m, index| %>
      <% if index <= 1  %>
      <h4><%= m.title %></h4>
      <p><%= m.description %></p>
      <img src="http://placehold.it/400x300&text=[img]"/>
      <%end%><%end%>
    </div>

    <div class="large-5 columns">
       <% @meats.each_with_index do |m, index| %>
       <% if index > 1  %>
      <h4><%= m.title %></h4>
      <p><%= m.description %></p>
