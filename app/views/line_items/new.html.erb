<div class="row">
  <div class="large-12 columns text-center">
    <h1>~ Build your meal ~</h1><br/>
    <h2>Which will you choose?</h2>
  </div>
</div><br/>

<div class="row">
  <ul class="small-block-grid-4">
    <% @items.each do |item| %>
        <li>
          <a class='th'>
            <h4><%= item.name %></h4>
            <%= image_tag(item.image, class: 'th') %>
          </a>
        </li>
    <%end%>
  </ul>
</div>

<div class="row">
  <hr><div class="magellan-container" data-magellan-expedition="fixed" data-options="destination_threshold:65;throttle_delay:0;" style="">
    <dl class="sub-nav">
      <dd data-magellan-arrival="top" class=""><a href="#top">Top</a></dd>
      <dd data-magellan-arrival="meats" class=""><a href="#meats">Meats</a></dd>
      <dd data-magellan-arrival="veggies" class=""><a href="#veggies">Veggies</a></dd>
      <dd data-magellan-arrival="salsas" class=""><a href="#salsas">Salsas</a></dd>
      <dd data-magellan-arrival="extras" class=""><a href="#extras">Extras</a></dd>
    </dl>
  </div>
  <script src="js/vendor/jquery.js"></script>
  <script src="js/foundation/foundation.js"></script>
  <script src="js/foundation/foundation.magellan.js"></script><hr>
</div>

<div class="row">
  <h2>Fillings</h2><br/>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3 data-magellan-destination="meats">Meats</h3>
    <a name="meats"></a>
  </div>
</div>

<div class="row">
  <% @meats.each do |m| %>
  <div class="medium-4 large-4 columns text-center">
    <p><%= m.title %></p>
    <%= image_tag m.image.url(:medium) %>
    <p class="text-left"><p><%= m.description %></p></p>
    <p class="text-left"><p><%= link_to 'Show', controller: "menu", action: "show", id: m %></p></p>
  </div>
  <%end%>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3 data-magellan-destination="veggies">Veggies</h3>
    <a name="veggies"></a>
  </div>
</div>

<div class="row">
  <% @veggies.each do |m| %>
  <div class="medium-4 large-4 columns text-center">
    <img src="http://placehold.it/300x250&text=[things]">
    <p class="text-left"><p><%= m.description %></p></p>
  </div><%end%>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3 data-magellan-destination="salsas">Salsas</h3>
    <a name="salsas"></a>
  </div>
</div>

<div class="row">
  <% @salsas.each do |m| %>
  <div class="medium-4 large-4 columns text-center">
    <img src="http://placehold.it/300x250&text=[things]">
    <p class="text-left"><p><%= m.description %></p></p>
  </div><%end%>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3 data-magellan-destination="extras">Extras</h3>
    <a name="extras"></a>
  </div>
</div>

<div class="row">
  <% @extras.each do |m| %>
  <div class="medium-4 large-4 columns text-center">
    <img src="http://placehold.it/300x250&text=[things]">
    <p class="text-left"><p><%= m.description %></p></p>
  </div><%end%>
</div>
