<!DOCTYPE html>
<html lang="en">

<head>
  <%= stylesheet_link_tag "homepage" %>
  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag "hover_description" %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body class="pattern_bg">
  <%= render partial: "shared/nav_bar", locals: { :items => @items } %>
  <%= render partial: "shared/flash" %>
  <h3 data-magellan-destination="top"></h3>
  <a name="top"></a>

  <section class="header">
    <div class="row">
      <div class="large-12 columns" id="head-holder">
        <%= image_tag "tim-da-hermano.png" %>
      </div>
    </div>
    <hr/>
  </section>

  <div class="large-12 columns"  id="site-content">
    <%= yield %>
  </div>
</body>

<footer class="fixed_footer">
  <% if current_page?(root_path) %>
    <%= render partial: "shared/hermano" %>
  <% end %>
</footer>

</html>
