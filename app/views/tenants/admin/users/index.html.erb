<%= stylesheet_link_tag    "responsive-tables" %>
<%= javascript_include_tag "responsive-tables" %> 
<div class="row">
  <br>
  <div class="large-6 columns"><h1>All Users</h1></div>
  <div class="large-6 columns"><%= link_to 'Create New User', new_admin_user_path, class: "button" %></div>
</div>

<table class="table-fill">
  <thead>
    <tr>
      <th class="text-left">First Name</th>
      <th class="text-left">Last Name</th>
      <th class="text-left">Email</th>
      <th class="text-left">Username</th>
      <th class="text-left">User Group</th>
      <th class="text-left">Do Shit</th> 
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="text-left"><%= user.first_name %></td>
        <td class="text-left"><%= user.last_name %></td>
        <td class="text-left"><%= user.email %></td>
        <td class="text-left"><%= user.username %></td>
        <td class="text-left"><%= user.roles.map {|role| role.name }.join(" ") %></td>
        <td class="text-left">
          <ul>
            <li><%= link_to 'Show', admin_user_path(user) %></li>
            <li><%= link_to 'Edit', edit_admin_user_path(user) %></li>
            <li><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

