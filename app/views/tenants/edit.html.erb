<h2>Edit My Store</h2>
<%= form_for @tenant do |f| %>
  <% if @tenant.errors.any? %>
  <div id="errors">
    <h2><%= pluralize(@tenant.errors.count, "error") %> occurred:</h2>

    <ul>
      <% @tenant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<p> <%= f.label :name, "Store Name" %><br>
    <%= f.text_field :name %></p>

<p> <%= f.label :description, "Description" %><br>
    <%= f.text_field :description %></p>

    <button type="submit">Submit</button>
<%end%>
