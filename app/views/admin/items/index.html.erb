<%= stylesheet_link_tag    "responsive-tables" %>
<%= javascript_include_tag "responsive-tables" %> 
<div class="row">
  <br>
  <div class="large-6 columns"><h1>Available Items</h1></div>
  <div class="large-6 columns"><%= link_to 'New Item', new_admin_item_path, class: "button" %></div>
</div>

<table class="responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td>
          <ul>
            <li><%= link_to 'Show', admin_item_path(item) %> | <%= link_to 'Edit', edit_admin_item_path(item) %> | <%= link_to 'Destroy', admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

