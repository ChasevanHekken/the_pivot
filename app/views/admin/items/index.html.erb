<%= stylesheet_link_tag    "responsive-tables" %>
<%= javascript_include_tag "responsive-tables" %>

<div class="row">
  <br>
  <div class="small-7 columns"><h1>Available Items</h1></div>
  <div class="small-3 columns"><%= link_to 'Add New Item', new_admin_item_path, class: "button", style: "left: 26%" %></div>
</div>

<table class="table-fill">
  <thead>
    <tr>
      <th class="text-center">Image</th>
      <th class="text-center">Name</th>
      <th class="text-center">Price</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="text-left"><%= item.name %></td>
        <td class="text-left"><%= item.view_price %></td>
        <td class="text-left">
          <ul>
            <li><%= link_to 'Show', admin_item_path(item) %> | <%= link_to 'Edit', edit_admin_item_path(item) %> | <%= link_to 'Destroy', admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
