<p id="notice"><%= notice %></p>

<h1><%= @item.name %></h1>

<% if @item.image.exists? %>
  <%= image_tag @item.image.url %><br/>
  <% else %>
  <%= image_tag "steak.jpg" %>
<% end %>

<ul>
  <li>Price: $<%= @item.price / 100 %></li>
  <li>Available Fillings:</li>
  <ul>
    <% @filling_names.each do |filling|%>
      <li><%= filling %></li>
    <% end %>  
<ul>
  <li><%= link_to 'Edit', edit_item_path(@item) %></li>
  <li><%= link_to 'Back', items_path %></li>
</ul>
