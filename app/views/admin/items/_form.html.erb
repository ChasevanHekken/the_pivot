<%= form_for([:admin, @item]) do |f| %>

  <div class="row">
    <div class="small-5 columns">
      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :price %>
        <%= f.number_field :price, max: 100000 %>
      </div>
      <% @all_fillings.each do |filling| %>
        <%= check_box_tag filling.id, filling.id, @item.fillings.include?(filling) %>
        <%= label_tag filling.id, filling.title %>
      <% end %>
    </div>
    <div class="small-7 columns">
      <% if @item.image.exists? %>
        <%= image_tag @item.image.url :medium %><br/>
      <% end %>
      <%= f.label :image, "Attach an Image" %><br />
      <%= f.file_field :image %>
    </div>
  </div>
  <div>
    <%= f.submit class: "button" %>
  </div>
<% end %>
